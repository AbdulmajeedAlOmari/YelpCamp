<% include ../partials/header %>

<div class="row">
    <div class="col-md-4">
        <h1><%= user.firstName + " " + user.lastName%></h1>
        <div class="thumbnail">
            <img src="<%= user.avatar %>" alt="user profile image">
            <div class="caption">
                <a href="mailto:<%= user.email %>"><%= user.email %></a>
            </div>
        </div>
        <% if(currentUser && (currentUser._id.equals(user._id) || JSON.parse(JSON.stringify(currentUser)).isAdmin)) { %>
            <a  type="button"
                id="edit-profile-button"
                class="btn btn-primary btn-lg btn-block" 
                href="/users/<%= user._id %>/edit">
                Edit Profile
            </a>
        <% } %>
        <div id="about-panel" class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">About <%= user.firstName %></h3>
            </div>
            <div class="panel-body">
                <%= user.bio %>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <legend><%= user.firstName %>'s campgrounds:</legend>
        <div class="well">
            <div class="row text-center" style="display: flex; flex-wrap: wrap;">
                <% campgrounds.forEach(function(campground){ %>
                    <div class="col-md-3 col-sm-6"> <!-- "col-sm-6" this is used to make it responsive, it makes the row holds 2 images when resizing to smaller size -->
                        <div class="thumbnail">
                            <img src="<%= campground.image %>"/>
                            <div class="caption">
                                <h4><%= campground.name %></h4>
                            </div>
                            <p>
                                <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                            </p>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>